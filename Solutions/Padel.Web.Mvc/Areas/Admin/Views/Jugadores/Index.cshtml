@{
    ViewBag.Title = "Jugadores";
    Layout = @MVC.Admin.Shared.Views._Layout;
}
@functions{
    public string GetAntiForgeryToken()
    {
        string cookieToken, formToken;
        AntiForgery.GetTokens(null, out cookieToken, out formToken);
        return cookieToken + ":" + formToken;
    }
}
@section CSSSection{
}
@section JSSection{
    <script src="@Url.Content(@Links.Scripts.padel.admin.jugadores.grid_js)" type="text/javascript"></script>
}

<div ng-controller="PlayersCtrl">
    <div class="widget" ng-init="antiForgeryToken='@GetAntiForgeryToken()'">
        <div class="widget-head">
            <div class="pull-left">
                Jugadores</div>
            <div class="widget-icons pull-right">
                <a href="#" class="wminimize"><i class="fa fa-chevron-up icon-chevron-up"></i></a>
                <a href="#" class="wsettings"><i class="fa fa-wrench"></i></a><a href="#" class="wclose">
                    <i class="fa fa-times"></i></a>
            </div>
            <div class="clearfix">
            </div>
        </div>
        <div class="widget-content" style="display: block;">
            <div class="gridStyle" ng-grid="gridOptions">
            </div>
        </div>
    </div>
    <button id="signupuser" type="button" class="btn btn-primary btn-block" ng-click="save()">Guardar</button>
</div>