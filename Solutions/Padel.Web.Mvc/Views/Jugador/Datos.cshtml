@model Padel.Web.Mvc.Controllers.ViewModels.Usuarios.UsuarioDatosModelView
@{
    ViewBag.Title = "Jugador";
    Layout = @MVC.Shared.Views._LayoutPlayer;    
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            Tus Datos</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<div class="row">
    <!-- /.col-lg-8 -->
    <div class="col-lg-12">
        <div class="well text-primary">
            <div class="row hidden till-loaded center puntuaciones">
                <div class="form col-lg-3">
                    @Html.DisplayFor(m => m.Usuario.DineroFicticio)
                </div>
                <div class="form col-lg-3">
                    @Html.DisplayFor(m => m.Usuario.AplicacionExperiencia)
                </div>
                <div class="form col-lg-3">
                    @Html.DisplayFor(m => m.Usuario.PuntosExperiencia)
                </div>
                <div class="form col-lg-3">
                    @Html.DisplayFor(m => m.Usuario.Nivel)
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.row -->
<div class="row">
    <!-- /.col-lg-8 -->
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-edit fa-fw"></i>Tus datos personales
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-10">
                        @using (Ajax.BeginForm(MVC.Usuarios._Modificar(), new AjaxOptions
                            {
                                HttpMethod = "POST",
                                InsertionMode = InsertionMode.Replace,
                                OnComplete = "ajaxComplete",
                                UpdateTargetId = "datosUsuarioView"
                            }, new { @class = "" }))
                        {
                            <div id="datosUsuarioView" class="form">
                                @Html.EditorForModel()
                            </div>
                            <div>
                                <button type="submit" class="btn btn-primary" data-loading-text="Loading...">
                                    Modificar</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-4
-->
</div>
<!-- /.row -->
